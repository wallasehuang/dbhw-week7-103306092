<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/style.css">
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#"><%= title %></a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <% if(author){ %>
          <li><a>Hello!<%=author%></a></li>
          <li><a href="/">回首頁</a></li>
          <li><a href="/logout">登出</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">

     <% if(articleTitle && content){%>
     <div class="col-md-7">
      <div class="card-articles">
        <div class="jumbotron">
          <h3 class="card-title"><%= articleTitle %></h3>
          <p class="card-text"><%= content %></p>
        </div>
      </div>
    </div>
    <%}%>
    <div class="col-md-5">
      <div class="panel panel-default card-post">
        <div class="panel-heading">
          <h3 class="panel-title">發文 by <%= author%></h3>
        </div>
        <div class="panel-body">
          <form role="form" action="/articles/send" method="post">
            <fieldset>
              <p>標題</p>
              <input type="text" id="articleTitle" name="articleTitle" />
              <p>內文</p>
              <textarea id="content" name="content" rows="10" cols="65"></textarea>
              <button type="submit" class="btn btn-info">發文</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
</body>
</html>
